
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read/write access to the students and quizResults collections.
    // This is for demonstration purposes and should be secured further for a production app.
    match /students/{studentId} {
      allow read, write: if true;
    }

    match /quizResults/{resultId} {
      allow read, write: if true;
    }
  }
}
